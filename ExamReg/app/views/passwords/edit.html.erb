<!-- Begin page -->
<div class="accountbg" style = "background: url(<%=image_path "restaurant.png"%>)"></div>
<div class="wrapper-page">
  <div class="card card-pages shadow-none">

    <div class="card-body">
      <div class="">
        <img src=<%=asset_path("clip-message-sent.png") %> class="img-fluid" alt="Responsive image">
      </div>
      <h5 class="font-18 text-center">Khôi phục mật khẩu</h5>

      <%= form_for :password_reset,
                   url: user_password_path(@user, token: @user.confirmation_token),
                   html: { method: :put } do |form| %>
        <div class="form-group">
          <div class="col-12">
            <%= form.label 'Mật khẩu' %>
            <%= form.password_field :password, type: 'password', :required => true, :class => 'form-control' %>
          </div>
        </div>

        <div class="form-group text-center m-t-20">
          <div class="col-12">
            <%= form.submit "Thay đổi", :class => 'btn btn-primary btn-block btn-lg waves-effect waves-light'  %>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
<!-- END wrapper -->