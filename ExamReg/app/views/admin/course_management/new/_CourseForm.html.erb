<div class="form-group row">
  <div class="col-sm-12">
    <%= f.input :courseID, label: 'Mã khoá học', error: 'Mã khoá học không hợp lệ', class: 'form-control', :maxlength => 10 %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-12">
    <%= f.input :name, label: 'Tên khoá học', error: 'Tên khoá học không hợp lệ', class: 'form-control', :maxlength => 70 %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-12">
    <%= f.input :credit, label: 'Số tín chỉ', error: 'Số tín chỉ không hợp lệ', class: 'form-control', as: :integer  %>
  </div>
</div>