<% content_for(:html_title) { 'Quản lí khoá học' } %>

<% content_for :css_includes do %>
  <%= stylesheet_link_tag "datatables/dataTables.bootstrap4.min.css" %>
  <%= stylesheet_link_tag "datatables/buttons.bootstrap4.min.css" %>
  <%= stylesheet_link_tag "datatables/responsive.bootstrap4.min.css" %>

  <!-- Sweet Alert -->
  <%= stylesheet_link_tag "sweet-alert2/sweetalert2.css" %>

  <!-- Dropzone -->
  <%= stylesheet_link_tag "dropzone/dist/dropzone.css" %>

  <!-- Datepicker -->
  <%= stylesheet_link_tag "bootstrap-datepicker/css/bootstrap-datepicker.min.css" %>
<% end %>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "RWD-Table-Patterns/dist/js/rwd-table.min" %>

  <!-- Required datatable js -->
  <%= javascript_include_tag "datatables/jquery.dataTables.min.js" %>
  <%= javascript_include_tag "datatables/dataTables.bootstrap4.min.js" %>

  <!-- Buttons examples -->
  <%= javascript_include_tag "datatables/dataTables.buttons.min.js" %>
  <%= javascript_include_tag "datatables/buttons.bootstrap4.min.js" %>
  <%= javascript_include_tag "datatables/jszip.min.js" %>
  <%= javascript_include_tag "datatables/pdfmake.min.js" %>
  <%= javascript_include_tag "datatables/vfs_fonts.js" %>
  <%= javascript_include_tag "datatables/buttons.html5.min.js" %>
  <%= javascript_include_tag "datatables/buttons.print.min.js" %>
  <%= javascript_include_tag "datatables/buttons.colVis.min.js" %>

  <!-- Responsive examples -->
  <%= javascript_include_tag "datatables/dataTables.responsive.min.js" %>
  <%= javascript_include_tag "datatables/responsive.bootstrap4.min.js" %>

  <!-- Datatable init js -->
  <%= javascript_include_tag "pages/admin/course_management/course-table.init.js" %>

  <!-- Sweet-Alert  -->
  <%= javascript_include_tag "sweet-alert2/sweetalert2.min.js" %>
  <%= javascript_include_tag "pages/admin/student_management/popup-modal.js" %>

  <!-- Dropzone js -->
  <%= javascript_include_tag "dropzone/dist/dropzone.js" %>
  <%= javascript_include_tag "pages/admin/student_management/import-data.js" %>

  <!-- Alertify js -->
  <%= javascript_include_tag "alertify/js/alertify.js"%>
  <%= javascript_include_tag "pages/admin/student_management/alert.js" %>

  <!-- Datepicker js -->
  <%= javascript_include_tag "bootstrap-datepicker/js/bootstrap-datepicker.min.js" %>
  <%= javascript_include_tag "pages/admin/student_management/date-picker.js" %>

<% end %>
