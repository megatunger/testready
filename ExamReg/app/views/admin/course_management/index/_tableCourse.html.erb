<div class="row">
  <div class="col-12">
    <div class="card-columns">
      <% themes = ['mdi mdi-cube-outline bg-primary text-white','mdi mdi-briefcase-check bg-success','mdi mdi-tag-text-outline bg-warning','mdi mdi-buffer bg-danger'] %>
      <% @courses.each_with_index do |course, index| %>
        <div class="card m-b-30">
          <div class="card-body">
            <div class="mini-stat-icon float-right">
              <i class=<%=themes[index%4] %>></i>
            </div>
            <div>
              <h4 class="font-15">
                <%=course.name%>
              </h4>
              <h5 class="mt-4">
              <%=course.courseID %>
              </h5>
              <h7 class="mt-4">
                Số tín chỉ: <%=course.credit %>
              </h7>
            </div>

            <div class="progress mt-4" style="height: 4px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="text-muted mt-2 mb-0">Tỉ lệ hoàn thành đăng kí<span class="float-right">75%</span></p>
            <a href="#" class="btn btn-success mt-2">Xem chi tiết</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>