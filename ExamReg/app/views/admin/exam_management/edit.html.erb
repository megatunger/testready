<%= simple_form_for(@exam, :url => admin_exam_path(@exam) , remote: request.xhr?, html: { data: { modal: true }, id: 'form_edit_exam' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title mt-0" id="myLargeModalLabel">Sửa tên kỳ thi: <%=@exam.name%></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <%= render 'admin/exam_management/new/ExamForm', f: f %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, "Lưu", class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
  </div>
<% end %>