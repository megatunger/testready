<%= simple_form_for(@exam_schedule, :url => admin_exam_schedule_index_path, remote: request.xhr?, html: { data: { modal: true }, id: 'form_new_exam_schedule' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title mt-0" id="myLargeModalLabel">Thêm lịch thi mới</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <% unless @exam_schedule.check_time_available %>
      <div class="alert alert-danger" role="alert">
        Tồn tại ca thi trong khoảng thời gian đó.
      </div>
    <% end %>
    <%= render 'admin/schedule_management/new/ExamScheduleForm', f: f %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, "Lưu", class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
  </div>
<% end %>