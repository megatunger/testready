<%= simple_form_for(@exam_schedule, :url => admin_exam_schedule_path, remote: request.xhr?, html: { data: { modal: true }, id: 'form_edit_exam_schedule' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title mt-0" id="myLargeModalLabel">Sửa lịch thi: <%="#{@course.course_full_name} - #{@exam_schedule.time_full_string}"%></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <%= render 'admin/schedule_management/edit/ExamScheduleForm', f: f %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, "Lưu", class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
  </div>
<% end %>