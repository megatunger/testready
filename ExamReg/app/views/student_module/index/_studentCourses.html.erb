<div class="row">
  <div class="col-12">
    <div class="card-columns">
      <% @courses.each_with_index do |course| %>
        <% color = returnColor(course)%>
        <div class="card m-b-30">
          <div class="card-body">
            <div class="mini-stat-icon float-right">
              <i class="mdi mdi-cube-outline bg-<%= color%>  text-white"></i>
            </div>
            <div>
              <h4 class="font-15">
                <%=course.name%>
              </h4>
              <h5 class="mt-4">
                <%=course.courseID %>
              </h5>
              <h6 class="mt-4">
                Số tín chỉ: <%=course.credit %>
              </h6>
              <h7 class="mt-4">
                Số sinh viên: <%=course.students.count %>
              </h7>
            </div>
            <div class="progress mt-4" style="height: 4px;">
              <div class="progress-bar bg-<%= color %>" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="text-muted mt-2 mb-0">Tỉ lệ hoàn thành đăng kí<span class="float-right">75%</span></p>

            <%= link_to "#{returnText(course)}", student_register_path(course), class: "btn btn-#{color} mt-2 waves-effect", data: { modal: true } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>