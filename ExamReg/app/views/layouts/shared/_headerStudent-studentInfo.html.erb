<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myLargeModalLabel">Thêm học sinh</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12">
            <div class="card" style = "margin-bottom: 0!important;">
              <div class="card-body">
                <%= form_for Student.new, url:  admin_student_management_index_path do |f| %>
                  <div class="form-group row">
                    <%= f.label :studentID, 'MSSV', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :studentID, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :lastName, 'Họ', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :lastName, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :firstName, 'Tên', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :firstName, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :birthday, 'Ngày sinh', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <div class="input-group">
                        <%= f.text_field :birthday, :class => 'form-control', :id => 'datepicker-autoclose' %>
                        <div class="input-group-append bg-custom b-0"><span class="input-group-text"><i class="mdi mdi-calendar"></i></span></div>
                      </div><!-- input-group -->
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :sex, 'Giới tính', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.select(:sex, options_for_select([['Nam', 0], ['Nữ', 1]]),{}, {:class => 'custom-select'}) %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :classID, 'Lớp', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :classID, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :major, 'Ngành', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :major, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :faculty, 'Khoa', :class => 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                      <%= f.text_field :faculty, :class => 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit 'LƯU', class:'btn btn-block btn-primary waves-effect waves-light' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div> <!-- end col -->
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->