<% content_for(:html_title) { 'Dang ky thi' } %>
<div class="row">
  <div class="col-xl-12">
    <div class="card m-b-30">
      <div class="card-body">
        <h4 class="mt-0 header-title mb-4"></h4>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th scope="col" class="text-center">Ca thi</th>
              <th scope="col" class="text-center">Ngày thi</th>
              <th scope="col" class="text-center">Giờ thi</th>
              <th scope="col" class="text-center">Phòng thi</th>
              <th scope="col" class="text-center">Số chỗ trống</th>
              <th scope="col" class="text-center"></th>
            </tr>
            </thead>
            <tbody>
              <% countExamSchedule = 0 %>
              <% @student.courses.each_with_index do |course| %>
              <% course.exam_schedules.each_with_index do |exam_schedule| %>
                <% countExamSchedule += 1 %>
                <tr>
                  <td class="text-center"><%= countExamSchedule %></td>
                  <td class="text-center"><%= exam_schedule.date.strftime "%d/%m/%Y" %></td>
                  <td class="text-center"><%= exam_schedule.start.to_s(:time) %> - <%= exam_schedule.finish.to_s(:time) %></td>
                  <td class="text-center"><%= exam_schedule.room_id %></td>
                  <td></td>
                  <td>
                    <div>
                      <a href="#" class="btn btn-primary btn-sm">Đăng ký</a>
                    </div>
                  </td>
                </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

</div>
<!-- END ROW -->
