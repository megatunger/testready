<%= form_for :session, url: session_path, html: {class: "form-horizontal m-t-30"}  do |form| %>

  <div class="form-group">
    <div class="col-12">
      <%= form.label 'Tên đăng nhập' %>
      <%= form.text_field :email, type: 'username', :required => true, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-12">
      <%= form.label 'Mật khẩu' %>
      <%= form.password_field :password, type: 'password', :required => true, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group text-center m-t-20">
    <div class="col-12">
      <%= form.submit "Đăng nhập", :class => 'btn btn-primary btn-block btn-lg waves-effect waves-light'  %>
    </div>
  </div>

  <div class="form-group row m-t-30 m-b-0">
    <div class="col-sm-7">
      <a href=<%=new_password_path%> class="text-muted">
        <i class="fa fa-lock m-r-5"></i>
        Quên mật khẩu?
      </a>
    </div>
  </div>
  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end %>
  </div>
<% end %>
